---
const {number, title, description, image} = Astro.props as {
  number: number;
  title: string;
  description: string;
  image: ImageMetadata;
}
import type { ImageMetadata } from "astro";
---
<div class={"flex gap-10 items-start lg:items-center justify-start max-w-[1000px] mx-auto " + (number % 2 === 0 ? 'lg:flex-row-reverse lg:text-right' : 'lg:flex-row text-left')} data-block-item={number}>
    <img src={image.src} alt={title} class="w-1/6 h-auto" />
    <div class="flex flex-col gap-4 max-w-[600px]">
        <h2 class="text-2xl font-bold">{title}</h2>
        <p class="text-base">{description}</p>
    </div>

</div>