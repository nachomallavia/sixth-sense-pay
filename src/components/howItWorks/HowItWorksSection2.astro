---
const {currentLocale} = Astro.props
import Card from "@/components/global/Card.astro"
import CardImage1 from "@/assets/how-it-works-card-1.png"
import CardImage2 from "@/assets/how-it-works-card-2.png"
import CardImage3 from "@/assets/how-it-works-card-3.png"
import CardImage4 from "@/assets/how-it-works-card-4.png"
const localesContent = {
    "en":{
        heading: "Key Features",
        
        features: [
            {
                number: 1,
                title: "Digital Wallet",
                image: CardImage1,

            },
            {
                number: 2,
                title: "On-ramp / Off-ramp",
                image: CardImage2,
            },
            {
                number: 3,
                title: "Instant payments via CVU",
                image: CardImage3,
            },
            {
                number: 4,
                title: "Internal token CashCoin",
                image: CardImage4,
            }
        ]
    },
    "es":{
        heading: "Características Clave",

        features: [
            {
                number: 1,
                title: "Billetera digital",
                image: CardImage1,
            },
            {
                number: 2,
                title: "On-ramp / Off-ramp",
                image: CardImage2,
            },
            {
                number: 3,
                title: "Pagos instantáneos vía CVU",
                image: CardImage3,
            },
            {
                number: 4,
                title: "Token interno CashCoin",
                image: CardImage4,
            }
        ]
    }
}

const content = localesContent[currentLocale as keyof typeof localesContent]
---

<section class="mx-auto py-16  w-full h-[calc(100vh-5rem)] lg:h-[calc(100vh-4rem)] bg-secondary">
    <div class="flex flex-col w-full mx-auto items-center justify-center">
    <h2 class="text-4xl font-bold mb-6">{content.heading}</h2>

</div>    </div>
    <div class="flex flex-col lg:flex-row flex-wrap gap-4 items-center justify-center w-full mx-auto mt-16">
        {content.features.map((feature) => (
            <Card number={feature.number} title={feature.title}  image={feature.image ?? undefined} />
        ))}
    </div>
</section>
