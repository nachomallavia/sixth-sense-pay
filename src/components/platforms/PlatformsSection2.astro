---
const {currentLocale} = Astro.props
import Card from "@/components/global/Card.astro"
import CardImage1 from "@/assets/casino-card.png"
import CardImage2 from "@/assets/game-card.png"
import CardImage3 from "@/assets/token-card.png"
import CardImage4 from "@/assets/loyalty-card.png"
const localesContent = {
    "en":{
        heading: "Use Cases",
        
        features: [
            {
                number: 1,
                title: "Digital Casinos",
                image: CardImage1,

            },
            {
                number: 2,
                title: "Skill based games",
                image: CardImage2,
            },
            {
                number: 3,
                title: "Token based programs",
                image: CardImage3,
            },
            {
                number: 4,
                title: "Loyalty systems",
                image: CardImage4,
            }
        ]
    },
    "es":{
        heading: "Características Clave",

        features: [
            {
                number: 1,
                title: "Casinos digitales",
                image: CardImage1,
            },
            {
                number: 2,
                title: "Juegos basados en habilidades",
                image: CardImage2,
            },
            {
                number: 3,
                title: "Programas basados en tokens",
                image: CardImage3,
            },
            {
                number: 4,
                title: "Sistemas de fidelización",
                image: CardImage4,
            }
        ]
    }
}

const content = localesContent[currentLocale as keyof typeof localesContent]
---

<section class="mx-auto py-16  w-full h-full bg-secondary">
    <div class="flex flex-col w-full mx-auto items-center justify-center">
    <h2 class="text-4xl font-bold mb-6">{content.heading}</h2>

</div>    </div>
    <div class="flex flex-col lg:flex-row px-4 gap-8 items-center justify-center w-full max-w-[1440px] mx-auto mt-16">
        {content.features.map((feature) => (
            <Card number={feature.number} title={feature.title}  image={feature.image ?? undefined} />
        ))}
    </div>
</section>
