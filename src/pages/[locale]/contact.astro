---
import MainLayout from "@/layouts/mainLayout.astro"
import ContactSection1 from "@/components/contact/ContactSection1.astro"
import ContactSection2 from "@/components/contact/ContactSection2.astro"
import ContactSection3 from "@/components/contact/ContactSection3.astro"

import { actions } from 'astro:actions'

// Get locale from URL parameter
const { locale = 'en' } = Astro.params

// Load content for the locale
const { data, error } = await Astro.callAction(actions.getLocaleContent, { locale })
const i18n = data?.i18n

if (error) {
    console.error('Error loading content:', error)
}
---

<MainLayout locale={locale} i18n={i18n}>
    <div class="bg-primary min-h-screen">
         <ContactSection1 currentLocale={locale} />
         <ContactSection2 currentLocale={locale} />
         <ContactSection3 currentLocale={locale} />
    </div>
</MainLayout>

