---
import MainLayout from "@/layouts/mainLayout.astro"
import AboutSection1 from "@/components/about/AboutSection1.astro"
import { actions } from 'astro:actions'

// Default locale for root path
const locale = "en"
const { data, error } = await Astro.callAction(actions.getLocaleContent, { locale })
const i18n = data?.i18n

if (error) {
    console.error('Error loading content:', error)
}
---

<MainLayout locale={locale} i18n={i18n}>
    <AboutSection1 currentLocale={locale} />
</MainLayout>
